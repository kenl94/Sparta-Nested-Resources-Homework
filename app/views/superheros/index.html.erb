<p id="notice"><%= notice %></p>

<h1>Superheros</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @superheros.each do |superhero| %>
      <tr>
        <td><%= superhero.name %></td>
        <td><%= superhero.age %></td>
        <td><%= superhero.state %></td>
        <td><%= link_to 'Show', superhero %></td>
        <td><%= link_to 'Edit', edit_superhero_path(superhero) %></td>
        <td><%= link_to 'Destroy', superhero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Superhero', new_superhero_path %>
